<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mms.test.mapper.TestMapper">

    <select id="getPage" resultType="com.mms.test.entity.TestEntity">
        SELECT
            id, title, content, create_time, update_time
        FROM test
        <where>
            <if test="dto.title != null and dto.title != ''">
                AND title LIKE CONCAT('%', #{dto.title}, '%')
            </if>
            <if test="dto.startTime != null">
                AND create_time >= #{dto.startTime}
            </if>
            <if test="dto.endTime != null">
                AND create_time &lt;= #{dto.endTime}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

</mapper>